<?xml version='1.0' encoding='utf-8'?>
<widget id="com.klarna.checkout.cordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaSampleApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="marat.dyatko@klarna.com" href="https://github.com/klarna/kco-mobile-sdk">
        Klarna Checkout Team
    </author>
    <content src="https://www.klarnacheckout.com/" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" requires-forward-secrecy="false" />
    <allow-navigation href="http://*/*" requires-forward-secrecy="false" />
    <allow-navigation href="https://*/*" requires-forward-secrecy="false" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.0" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="default" />
    <plugin name="kco-mobile-sdk" spec="~1.3.4" />
</widget>
