<?xml version='1.0' encoding='utf-8'?>
<widget id="com.klarna.checkout.cordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <name>CordovaSampleApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="marat.dyatko@klarna.com" href="https://github.com/klarna/kco-mobile-sdk">
        Klarna Checkout Team
    </author>
    <content src="https://www.klarnacheckout.com/" />
    <access origin="*" requires-forward-secrecy="false" />
    <allow-navigation href="https://*/*" requires-forward-secrecy="false" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="default" />
</widget>
